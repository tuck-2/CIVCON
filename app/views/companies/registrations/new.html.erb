<div id="pagetitle" class="signup-title">
  <h1>
    SignUp
    <span>企業情報登録</span>
  </h1>
</div>

<div class="container">
  <%= form_with model: @company, url: company_registration_path, id: 'new_company', class: 'new_company', local: true do |f| %>
    <%= render "companies/shared/error_messages", resource: resource %>

    <div class="field form-group col-md-5">
      <%= f.label :name, "会社名", class: "form-label" %>
      <%= f.text_field :name,autofocus: true, class: "form-control" %>
    </div>

    <div class="field form-group col-md-5">
      <%= f.label :name_kana, "会社名(カナ)", class: "form-label" %>
      <%= f.text_field :name_kana, class: "form-control" %>
    </div>

    <div class="field form-group col-md-4">
      <%= f.label :postal_code, "郵便番号", class: "form-label" %>
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>

    <div class="field form-group col-md-5">
      <%= f.label :address, "所在地", class: "form-label" %>
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="field form-group col-md-4">
      <%= f.label :phone_num, "電話番号", class: "form-label" %>
      <%= f.text_field :phone_num, class: "form-control" %>
    </div>

    <div class="field form-group col-md-4">
      <%= f.label :fax_num, "FAX番号", class: "form-label" %>
      <%= f.text_field :fax_num, class: "form-control" %>
    </div>

    <div class="field form-group col-md-4">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field form-group col-md-4">
      <%= f.label :password, "パスワード", class: "form-label" %>
      <% if @minimum_password_length %>
      <span>(<%= @minimum_password_length %>文字以上)</span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field form-group col-md-4">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions form-group col-auto">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "companies/shared/links" %>
</div>
