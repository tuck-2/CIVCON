<div id="pagetitle" class="products-title">
  <h1>
    Products
    <span>製品一覧</span>
  </h1>
</div>

<div class="container">
  <div id="search-container">
    <%= form_with url: search_products_path, method: :get, local: true do |f| %>
      <div class="form-row align-items-center">
        <div class="title">
          <p>
            Search
            <span>製品検索</span>
          </p>
        </div>
        <div class="col-md-6 ml-auto">
         <%= f.text_field :word, class: "form-control" %>
        </div>
        <div class="col-auto mr-auto">
         <%= f.submit "検索", class: "btn btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="search-result mt-3">
    <% if @products.any? %>
      <% @products.each do |product| %>
        <div class="product-container">
          <%= link_to product_path(product.id) do %>
            <%= attachment_image_tag product.product_images.first, :image, format: 'jpeg', fallback: "no_img.jpeg", class: "container-image" %>
            <span class="container-title">
              <%= product.name %>
            </span>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p>製品がありません</p>
    <% end %>
  </div>

</div>