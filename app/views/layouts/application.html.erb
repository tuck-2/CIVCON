<!DOCTYPE html>
<html>
  <head>
    <title>CIVCON</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <li>About</li>
      <li><%= link_to "製品一覧", products_path %></li>
      <li><%= link_to "メーカー一覧", companies_path %></li>
      <% if user_signed_in? %>
        <li>
          <%= "#{current_user.name} としてログインしています" %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
      <% elsif company_signed_in? %>
        <li>
          <%= "#{current_company.name} としてログインしています" %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_company_session_path, method: :delete %>
        </li>
        <li>
          <%= link_to "製品登録", new_product_path %>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
      <% end %>
    </header>

    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>

    <%= yield %>
  </body>
</html>
