<div id="pagetitle" class="estimate-title">
  <h1>新規見積依頼</h1>
</div>

<div class="container">
  <% if @estimate.errors.any? %>
    <% @estimate.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form_with model: [@product, @estimate], local: true do |f| %>
    <div class="form-group">
      <%= f.label :description, "施工概要", class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "送信", class: "btn btn-success" %>
    </div>
  <% end %>
</div>